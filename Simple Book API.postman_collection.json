    {
      "name": "List of books",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", () => {\r",
              "    pm.response.to.have.status(200);\r",
              "});\r",
              "\r",
              "\r",
              "// test to get non fictional books only if they are available\r",
              "\r",
              "const response = pm.response.json();\r",
              "\r",
              "const nonFictionBooks = response.filter((book) => book.available === true);\r",
              "\r",
              "// in case there is no book available\r",
              "\r",
              "const book = nonFictionBooks[0];\r",
              "\r",
              "\r",
              "pm.test(\"Book found\" , () => {\r",
              "\r",
              "    pm.expect(book).to.be.an('object');\r",
              "    pm.expect(book.available).to.be.true;\r",
              "    pm.expect(book.available).to.equal(true);\r",
              "});\r",
              "\r",
              "\r",
              "pm.globals.set(\"bookId\", book.id);"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "auth": {
          "type": "noauth"
        },
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://simple-books-api.click/books?limit=&type=non-fiction",
          "protocol": "https",
          "host": [
            "simple-books-api",
            "click"
          ],
          "path": [
            "books"
          ],
          "query": [
            {
              "key": "limit",
